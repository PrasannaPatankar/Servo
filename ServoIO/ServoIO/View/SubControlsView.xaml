<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ServoIO.View.SubControlsView" >
    <StackLayout BackgroundColor="Black">        <Label Text="{Binding EmployeeName}" HorizontalOptions="CenterAndExpand" TextColor="White" />
        <Label Text="{Binding Receipts}" FontSize="Medium" FontAttributes="Bold" HorizontalOptions="CenterAndExpand" TextColor="White"></Label>
        <Label Text="{Binding Outstandings}" HorizontalOptions="CenterAndExpand"  FontSize="Large" FontAttributes="Bold"  TextColor="White"></Label>
    </StackLayout>
</Grid>