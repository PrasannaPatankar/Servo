<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ServoIO.View.SubControlsView">
    <StackLayout>
        <Label Text="{Binding Carrierid}" HorizontalOptions="CenterAndExpand" TextColor="White" />
        <Label Text="{Binding Code}" FontSize="Medium" FontAttributes="Bold" HorizontalOptions="CenterAndExpand" TextColor="White"></Label>
        <Label Text="{Binding CNT}" HorizontalOptions="CenterAndExpand"  FontSize="Large" FontAttributes="Bold"  TextColor="White"></Label>
    </StackLayout>
</Grid>