<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ServoIO.View.LoginPage"
             BackgroundImage="back.jpg">
    <ContentPage.Content>
        <StackLayout  x:Name="stkMain" >
            <StackLayout>
                <Image x:Name="servoImage" Source="io.jpg" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
            </StackLayout>
            <StackLayout >
                <Entry x:Name="entUserName" Margin="20" Placeholder="User Name" HorizontalOptions="Fill" HeightRequest="40" PlaceholderColor="White"/>
                <Entry x:Name="entPassword" Placeholder="Password" Margin="20" IsPassword="True" HorizontalOptions="Fill" HeightRequest="40" PlaceholderColor="White"/>
            </StackLayout>
            <StackLayout>
                <Button x:Name="entSubmit" Text="Submit" BackgroundColor="White" HorizontalOptions="CenterAndExpand"  Clicked="entSubmit_Clicked" />
                </StackLayout>
            </StackLayout>
    </ContentPage.Content>  
</ContentPage>