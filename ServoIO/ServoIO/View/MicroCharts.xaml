<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms"
             x:Class="ServoIO.View.MicroCharts">
    <ContentPage.Content>
        <StackLayout>
            <microcharts:ChartView x:Name="PrimaryVsSecChart">
                <microcharts:Chart>
                    <microcharts:RadialGaugeChart Entries="{Binding entries}"/>
                </microcharts:Chart>
            </microcharts:ChartView>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>