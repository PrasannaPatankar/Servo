<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ServoIO.View.MenuHide" BackgroundColor="AliceBlue">
    <StackLayout Orientation="Vertical" HorizontalOptions="EndAndExpand" VerticalOptions="EndAndExpand" Margin="4">
        <StackLayout x:Name="ImageOne" IsVisible="False">
            <Image Source="checklist.png"  HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="40"  />
            <Label Text="List" HorizontalOptions="Center" VerticalOptions="Center" FontSize="10"/>
        </StackLayout>
        <StackLayout x:Name="ImageTwo" IsVisible="False">
            <Image Source="statistics.png"   HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="40" />
            <Label Text="Grid" HorizontalOptions="Center" VerticalOptions="Center" FontSize="10"/>
        </StackLayout>
        <StackLayout>
            <Image Source="list.png" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="40" x:Name="hideclick"/>
        </StackLayout>
       
        
    </StackLayout>
</ContentPage>